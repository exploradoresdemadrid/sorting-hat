<%= form_with(model: event, multipart: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :max_capacity %>
    <%= form.number_field :max_capacity %>
  </div>

  <div class="field">
    <%= form.label :group_duplication_factor %>
    <%= form.number_field :group_duplication_factor, step: 0.1, default: 1 %>
  </div>

  <div class="field">
    <%= form.label :file %>
    <%= form.file_field :import %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
