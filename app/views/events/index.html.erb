<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Max capacity</th>
      <th>Group duplication factor</th>
      <th>Min target</th>
      <th>Executions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.max_capacity %></td>
        <td><%= event.group_duplication_factor %></td>
        <td><%= event.executions.succeeded.order(target_function: :asc).first&.target_function %></td>
        <td><%= event.executions.where(status: :succeeded ).count %>/<%= event.executions.count %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

